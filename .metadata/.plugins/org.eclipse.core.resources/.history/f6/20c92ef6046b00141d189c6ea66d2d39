					public void actionPerformed(ActionEvent e) {
						DefaultTreeModel model = (DefaultTreeModel) tree.getModel();
						DefaultMutableTreeNode root = (DefaultMutableTreeNode) model.getRoot();
						DefaultMutableTreeNode selectedNode = (DefaultMutableTreeNode) model.getRoot();
						DefaultMutableTreeNode newNode = (DefaultMutableTreeNode) model.getRoot();
						if (e.getSource() == btnAddGroup && !textAddGroup.getText().trim().equals("")) {
								storeGroup = textAddGroup.getText();
								root.add(new DefaultMutableTreeNode(storeGroup));
								model.reload();
								// JOptionPane.showMessageDialog(null,
								// "Added Group: " + storeGroup);
						} else {
							JOptionPane.showMessageDialog(null, "Please enter a Group Name.");
						}
						
						if (selectedNode != null) {
							if (e.getSource() == btnAddGroup && !textAddGroup.getText().trim().equals("")) {
								storeGroup = textAddGroup.getText();
								model.insertNodeInto(newNode, selectedNode, selectedNode.getChildCount());
								model.reload();
								// JOptionPane.showMessageDialog(null,
								// "Added Group: " + storeGroup);
							} else {
								JOptionPane.showMessageDialog(null, "Please enter a Group Name.");
							}
						}
					}

